<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceMovie" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceMovieBanner" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">64dp</item>
    </style>

    <style name="ChipAppearance" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@color/yellow</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="CrossDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="colorPrimary">@color/dark_transparent_01</item>
        <item name="colorPrimaryDark">@color/dark_transparent_01</item>
        <item name="colorAccent">@color/dark_transparent_01</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/dark_transparent_01</item>
    </style>
</resources>